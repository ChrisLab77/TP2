---
# Source: java-hello/templates/serviceaccount.yaml
apiVersion: v1
kind: ServiceAccount
metadata:
  name: release-name-java-hello
  labels:
    helm.sh/chart: java-hello-0.1.0
    app.kubernetes.io/name: java-hello
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.16.0"
    app.kubernetes.io/managed-by: Helm
---
# Source: java-hello/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: release-name-java-hello
  labels:
    helm.sh/chart: java-hello-0.1.0
    app.kubernetes.io/name: java-hello
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.16.0"
    app.kubernetes.io/managed-by: Helm
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: java-hello
    app.kubernetes.io/instance: release-name
---
# Source: java-hello/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: release-name-java-hello
  labels:
    helm.sh/chart: java-hello-0.1.0
    app.kubernetes.io/name: java-hello
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.16.0"
    app.kubernetes.io/managed-by: Helm
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: java-hello
      app.kubernetes.io/instance: release-name
  template:
    metadata:
      labels:
        app.kubernetes.io/name: java-hello
        app.kubernetes.io/instance: release-name
    spec:
      serviceAccountName: release-name-java-hello
      securityContext:
        {}
      containers:
        - name: java-hello
          securityContext:
            {}
          image: "sahar449/tom:11"
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: http
          readinessProbe:
            httpGet:
              path: /
              port: http
          resources:
            {}
---
# Source: java-hello/templates/tests/test-connection.yaml
apiVersion: v1
kind: Pod
metadata:
  name: "release-name-java-hello-test-connection"
  labels:
    helm.sh/chart: java-hello-0.1.0
    app.kubernetes.io/name: java-hello
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.16.0"
    app.kubernetes.io/managed-by: Helm
  annotations:
    "helm.sh/hook": test
spec:
  containers:
    - name: wget
      image: busybox
      command: ['wget']
      args: ['release-name-java-hello:80']
  restartPolicy: Never
